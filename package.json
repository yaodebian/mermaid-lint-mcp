{
  "name": "mermaid-lint-mcp",
  "version": "1.0.4",
  "description": "MCP server for Mermaid diagram syntax checking and linting",
  "type": "module",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "bin": {
    "mermaid-lint-mcp": "dist/cli.js"
  },
  "scripts": {
    "clean": "rm -rf dist",
    "build": "npm run clean && tsc && chmod +x dist/cli.js",
    "dev": "tsx src/index.ts",
    "dev:cli": "tsx src/cli.ts",
    "test": "node --experimental-vm-modules node_modules/jest/bin/jest.js",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "lint": "eslint src/**/*.ts",
    "lint:fix": "eslint src/**/*.ts --fix",
    "prepare": "npm run build",
    "prepublishOnly": "npm run test && npm run build",
    "postinstall": "node -e \"console.log('\\nðŸ“‹ Important: This package requires a browser for Mermaid validation.\\n\\nðŸ”§ Options:\\n1. Use --browser-path to specify your Chrome/Chromium path\\n2. Install browsers: npx puppeteer browsers install chrome\\n3. Use system Chrome: --browser-path \\\"/Applications/Google Chrome.app/Contents/MacOS/Google Chrome\\\" (macOS)\\n')\""
  },
  "keywords": [
    "mcp",
    "mermaid",
    "diagram",
    "lint",
    "syntax-check",
    "model-context-protocol"
  ],
  "author": "yaodebian",
  "license": "MIT",
  "dependencies": {
    "@modelcontextprotocol/sdk": "^1.19.1",
    "mermaid": "^11.12.0",
    "puppeteer": "^24.23.0",
    "zod": "^4.1.12"
  },
  "devDependencies": {
    "@types/jest": "^30.0.0",
    "@types/node": "^24.7.0",
    "@typescript-eslint/eslint-plugin": "^8.46.0",
    "@typescript-eslint/parser": "^8.46.0",
    "eslint": "^9.37.0",
    "jest": "^30.2.0",
    "ts-jest": "^29.1.2",
    "ts-node": "^10.9.2",
    "tsx": "^4.7.1",
    "typescript": "^5.4.2"
  },
  "config": {
    "puppeteer": {
      "skipDownload": "true"
    }
  },
  "files": [
    "dist",
    "README.md",
    "LICENSE"
  ],
  "engines": {
    "node": ">=18.0.0"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/yaodebian/mermaid-lint-mcp.git"
  },
  "bugs": {
    "url": "https://github.com/yaodebian/mermaid-lint-mcp/issues"
  },
  "homepage": "https://github.com/yaodebian/mermaid-lint-mcp#readme"
}